@model Book;

<h2 class="text-info">@(Model.Id==0?"Create new":"Edit") Book</h2>

<div class="border container" style="padding: 30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" placeholder="Name" class="form-control" />
            </div>
            <div class="col-3">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" placeholder="Author" class="form-control" />
            </div>
            <div class="col-3">
                <span class="text-danger" asp-validation-for="Author"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" placeholder="ISBN" class="form-control" />
            </div>
            <div class="col-3">
                <span class="text-danger" asp-validation-for="ISBN"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Id == 0?"Create":"Edit")</button>
            </div>
            <div class="col-3 ">
                <a asp-action="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>

    </form>
</div>


@section Scripts{ 
<partial name="_ValidationScriptsPartial"/>
}